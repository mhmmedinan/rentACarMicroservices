	@Override
	public List<GetAllCarsResponse> getAll() {

		List<Car> cars = carRespository.findAll();
		List<GetAllCarsResponse> responses = cars.stream()
				.map(car->modelMapperService.forResponse().map(car,GetAllCarsResponse.class)).toList();
		return responses;
	}

